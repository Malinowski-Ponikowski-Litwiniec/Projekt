<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDailyActivityForm">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/AppTheme"
        app:popupTheme="@style/AppTheme">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Podaj dane aktywności"
            android:textColor="@color/text_white"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient4_edit" >


        <TextView
            android:id="@+id/kcal"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/time"
            android:layout_marginBottom="255dp"
            android:background="@drawable/textfield_white"
            android:clickable="false"
            android:gravity="center"
            android:text=""
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignStart="@+id/textView9"
            android:layout_alignTop="@+id/kcal"
            android:gravity="center"
            android:text="Liczba spalonych kalorii:"
            android:textColor="@color/text_white" />

        <EditText
            android:id="@+id/time"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="219dp"
            android:background="@drawable/textfield_white"
            android:inputType="numberDecimal"
            android:singleLine="true"
            android:textAlignment="center"
            android:focusedByDefault="false"
            android:textColor="@color/text_black" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/time"
            android:gravity="center"
            android:text="Czas wykonywania \n(w minutach):"
            android:textColor="@color/text_white" />

        <!--Nazwa aktywności wyświetlana pod toolbarem-->
        <!--<TextView-->
            <!--android:id="@+id/activityName"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginTop="63dp"-->
            <!--android:textAlignment="center"-->
            <!--android:textColor="@color/text_white"-->
            <!--android:textSize="20sp" />-->

        <TextView
            android:id="@+id/textView25"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="Nazwa aktywności:"
            android:textColor="@color/text_white" />

        <EditText
            android:id="@+id/activityName"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:layout_alignStart="@+id/kcal"
            android:layout_alignTop="@+id/textView25"
            android:background="@drawable/textfield_white"
            android:gravity="center"
            android:text=""
            android:clickable="false"
            android:textColor="@color/text_black" />

        <Button
            android:id="@+id/dodajBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="40dp"
            android:background="@drawable/custombuttonborder"
            android:gravity="center"
            android:textColor="@color/text_white"
            android:text="Dodaj" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="281dp"
            app:srcCompat="@drawable/textline" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="136dp"
            app:srcCompat="@drawable/textline" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>